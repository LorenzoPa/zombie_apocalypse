      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"username\": \"loren\",\n    \"email\": \"loren@example.com\",\n    \"password\": \"12345\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/api/accounts/register/",
          "protocol": "http",
          "host": ["127.0.0.1"],
          "port": "8000",
          "path": ["api", "accounts", "register", ""]
        }
      },
      "response": []
    },
    {
